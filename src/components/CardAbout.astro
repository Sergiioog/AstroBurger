---
// Componente de about
interface Props {
  logo:string;
  titulo:string;
  descripcion:any;
  alt:string;
}
const {logo, titulo, descripcion,alt} = Astro.props;
---
<div id="card" class="bg-white h-[300px] w-[250px] rounded-lg flex items-center flex-col pt-5 m-auto mb-20">
  <figure class=" w-full h-auto flex justify-center overflow-hidden">
    <img src={logo} alt={alt}>
  </figure>
  <div class="mt-5 w-full h-auto flex justify-center items-center">
    <h2 class="text-xl">{titulo}</h2>
  </div>
  <div class="mt-2 w-3/4 h-auto flex justify-center items-center text-center">
    <p class="text-md">{descripcion}</p>
  </div>
</div>

   

<style>
  #card {
    transition: transform 1s ease-out;
  }
  #card:hover {
    transform: translateY(-10px);
    cursor: pointer;
  }
  img {
    height: 100px;
    width: 100px;
    max-height: 100%;
    max-width: 100%;
  }
  
</style>