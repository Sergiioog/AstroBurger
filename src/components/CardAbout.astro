---
interface Props {
  logo:string;
  titulo:string;
  descripcion:any;
  alt:string;
}
const {logo, titulo, descripcion,alt} = Astro.props;
---
<div class="bg-white h-[400px] w-[300px] rounded-lg flex items-center flex-col pt-5">
  <figure class="w-3/4 h-1/3 flex justify-center items-center ">
     <img src={logo} alt={alt}>
  </figure>
  <div class="mt-5 w-full h-auto flex justify-center items-center">
    <h2 class="text-2xl">{titulo}</h2>
  </div>
  <div class="mt-2 w-3/4 h-auto flex justify-center items-center text-center ">
    <p class="text-lg">{descripcion}</p>
  </div>
</div>
   

<style>

img {
  height: 100px;
  width: 100px;
  max-height: 100%;
  max-width: 100%;
}
</style>