---
interface Props {
    title: string
}

const {title} = Astro.props;

---

<section class="w-full h-[80vh] relative flex justify-center items-center">
    <h1 class="text-[10rem] z-10 relative">{title}</h1>
    <img src="assets/photos/hamburguesas/burger.png" alt="Burger Principal" class="absolute mr-32 z-20 w-[50%] max-h-full">
</section>


<style>
    @font-face {
		font-family: 'merienda';
		src: url('assets/fonts/Merienda-SemiBold.ttf') format('opentype');
	}

 h1 {
    font-family: 'merienda', system-ui, sans-serif;
    font-size: 12rem;
    color: #fff; /* Texto blanco */
    text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.8);
    letter-spacing: -12px;
    line-height: 1.3;
    text-align: center;
    margin-bottom: 30px;
    border-radius: 10px; /* Esquinas redondeadas para un aspecto m√°s suave */
    /* Otros estilos adicionales que desees agregar */
}


</style>