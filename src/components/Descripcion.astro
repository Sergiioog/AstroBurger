---
import Boton from './Boton.astro';
import Header from './Header.astro';


interface Props {
    titulo:string;
    descripcion:any;
    imagen:string;
    frase?:string;

}
const {titulo,descripcion,imagen,frase} = Astro.props;
---

<section class=" h-auto w-full flex justify-center mt-14 items-center">
    <div id="seccionTexto" class="w-[40%] h-autoflex justify-center flex-col p-5 mt-10">
        <h1 class=" h-auto w-auto flex justify-center
        text-4xl">{titulo}</h1>
        <p class="p-5 text-justify mt-5 mb-3 "> 
           {descripcion}
           <br/>
           {frase}
        </p>
        <!-- <div class=" flex justify-center items-center">
            <Boton ruta='#seccionProductos' titulo='SABER MAS' />
        </div> -->
        
    </div>
    <div class="w-[40%] h-[50vh] ml-32">
        <img src={imagen} alt="imagen burger">
    </div>
    
</section>


<style>
#seccionTexto h1,h2 {
        font-family: 'merienda', system-ui, sans-serif;
        color: #fff; /* Texto blanco */
        text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.8);
        letter-spacing: -2px;
        text-align: center;

    }

    #seccionTexto p, button {
        color: #fff; /* Texto blanco */
        text-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8);
    }
    img {
        max-height: 100%;
    }
   
</style>
