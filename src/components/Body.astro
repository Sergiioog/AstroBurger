---
import CardFoto from "./CardFoto";
import Titulo from "./Titulo.astro";
import Footer from "./Footer.astro";
---


<section>
    <Titulo title="ASTROBURGER"  />
    <section class="w-full h-auto flex justify-center items-center flex-col mt-10 sm:mt-20 md:mt-32 lg:mt-44 xl:mt-72 2xl:mt-96">
        <h2 class="text-2xl sm:text-3xl   text-white">NUESTROS PRODUCTOS</h2>
        <div class="mt-10 w-auto h-full grid gap-0 grid-cols-1 sm:grid-cols-2">
            <a href="/productos" class="transform transform-origin-center 
            transition-transform duration-300 ease-in-out hover:scale-105
            hover:cursor-pointer"> 
                <CardFoto titulo="HAMBURGUESAS" urlFoto="assets/photos/hamburguesas/burger4.png"  alt="Foto Burger" />
            </a>
            <a href="/productos" class="transform transform-origin-center 
            transition-transform duration-300 ease-in-out hover:scale-105
            hover:cursor-pointer"> 
                <CardFoto titulo="COMPLEMENTOS" urlFoto="assets/photos/complementos/patatasbacon.png"  alt="Foto Patatas" />
            </a>
            <a href="/productos" class="transform transform-origin-center 
            transition-transform duration-300 ease-in-out hover:scale-105
            hover:cursor-pointer"> 
                <CardFoto titulo="POSTRES" urlFoto="assets/photos/postres/tartaquesonutella.png"  alt="Foto Tarta Queso" />
            </a>
            <a href="/productos" class="transform transform-origin-center 
            transition-transform duration-300 ease-in-out hover:scale-105
            hover:cursor-pointer"> 
                <CardFoto titulo="SHAKES" urlFoto="assets/photos/shakes/choco.png"  alt="Foto Shake" />
            </a> 
        <div>
    </section>
</section>

<style>
    h2 {
        font-family: 'merienda', system-ui, sans-serif;
        text-shadow: 2px 2px 2px black;
    }
