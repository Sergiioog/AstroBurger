            <h2 class="text-lg flex justify-center items-center mt-4 text-center">{producto.descripcion1}</h2>
            <div class=" h-auto w-full mt-4">
                <p class="text-md text-justify">{producto.descripcion2}</p>
            </div>
            <p class="text-lg font-bold mt-3" id="precio">Precio: {producto.precio}€</p>
            <div class="h-auto w-auto bottom-0 mt-2 flex justify-center items-center ">
               <Button titulo="AÑADIR"/>
            </div>
        </div>
        <div class=" w-[50%] h-full ml-10">
            <figure class=" h-full w-full flex justify-center items-center align-middle">
                <img class="max-h-full max-w-full" src={producto.image} alt={producto.alt}/>
            </figure>
        </div>
       
    </section>
    <Footer />
</Layout>


<style>

    @font-face {
        font-family: 'merienda';
        src: url('assets/fonts/Merienda-SemiBold.ttf') format('truetype');
    }


    h1,h2 {
        font-family: 'merienda', system-ui, sans-serif;
        color: #fff; /* Texto blanco */
        text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.8);
        letter-spacing: 0px;
        text-align: center;}
    p {
