---
import type { GetStaticPaths } from "astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import React from "react";

export async function getStaticPaths() {
    const productos = [
        {id:'1',title:"ORIGINALS",image:'public/assets/photos/hamburguesas/burger1.png', nombre:'Originals',
    precio:'12,99', ingredientes:[{lechuga:"lechuga",tomate:"tomate",salsa:"salsa",pepinillos:"pepinillos",carne:"carne"}]},
    {id:'2',title:"HOLA MAMA",image:'public/assets/photos/hamburguesas/burger3.png', nombre:'Originals',
    precio:'12,99', ingredientes:[{lechuga:"lechuga",tomate:"tomate",salsa:"salsa",pepinillos:"pepinillos",carne:"carne"}]}
    ]

    return productos.map((producto) => {
        return {
            params: {id: producto.id},
            props: {producto}
        }
    });
}
const {id} = Astro.params;
const {producto} = Astro.props;
