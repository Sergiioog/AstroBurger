        <div class="bg-red-500 w-[50%] h-[50%] flex justify-center items-center text-justify flex-col">
            <div class="w-full h-16 bg-blue-500 flex justify-center items-center">
                <h1 class="text-3xl">{id} {producto.title} </h1>
            </div>  
           
            <h1>{producto.nombre}</h1>
            <h1>{producto.precio}</h1>
            <ul>
                {producto.ingredientes.map((ingrediente) => {
                    return (
                        <React.Fragment>
