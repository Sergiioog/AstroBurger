---
// Pagina de error 404 not found

import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout title="Page Not Found">
    <Header />
    <figure class="flex justify-center items-center mt-20 flex-col w-full ">
        <h1 class="text-2xl md:text-3xl xl:4xl 2xl:5xl w-full h-auto  ">UPS! NO HEMOS PODIDO ENCONTRAR LA P√ÅGINA</h1>
        <img class="mt-3" src="assets/photos/404foto.png" alt="Error 404">
    </figure>

</Layout>
<style>
    /* Font face para poner font family */
    @font-face { 
        font-family: 'merienda';
        src: url('assets/fonts/Merienda-SemiBold.ttf') format('opentype');
    }
      h1 {
        font-family: 'merienda', system-ui, sans-serif;
        color: #fff; /* Texto blanco */
        text-shadow: 5px 5px 10px rgba(0, 0, 0, 0.8);
        letter-spacing: -2px;
        text-align: center;
    }

    img {
            max-width: 70%;
        }
    @media (min-width: 640px) {
        
        img {
            max-width: 50%;
        }
        
    }

    @media (min-width: 768px) {
       #seccionTexto {
        max-width: 50%;
       }
        img {
            max-width: 60%;
        }
    }

    @media (min-width: 1024px) {
        
        img {
            max-width: 70%;
        }
    }

    @media screen and (min-width: 1280px) {
        
        img {
            max-width: 80%;
        }
    }

    @media screen and (min-width: 1536px) {
        
        img {
            max-width: 50%;
        }
        
    }
</style>